#!/bin/bash
export PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin

<%= @pre_command %>

if [ ! -d <%= @destination_dir %> ] ; then
  git clone --recursive <%= @source_url %> -b <%= @branch %> <%= @destination_dir %>
else
  cd <%= @destination_dir %>
  git pull origin <%= @branch %>
fi

<%= @post_command %>
